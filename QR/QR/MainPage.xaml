<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QR.MainPage">

    <StackLayout x:Name="stkQR" >
        <Label Text="Team Fernanda, Jesus Emmanuel y Luis Angel"
               HorizontalOptions="CenterAndExpand"
               />
        <Entry x:Name="txtValorQR"  Placeholder="Inserta un valor para generar un QR"/>
        <Button x:Name="btnGeneraCodigo" Text="Generar QR" Clicked="btnGeneraCodigo_Clicked" ></Button>
    </StackLayout>

</ContentPage>
